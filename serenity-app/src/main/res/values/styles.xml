<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.AppTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.AppTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.AppTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.AppTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="rippleColor">?colorOnPrimary</item>
        <item name="android:strokeColor">@color/serenity_btn_text_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/serenity_btn_stroke_color_selector</item>
        <item name="rippleColor">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton.Emby" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/serenity_btn_stroke_color_selector</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="backgroundTint">@color/serenity_emby_server_background_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton.Plex" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/serenity_btn_stroke_color_selector</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="backgroundTint">@color/serenity_plex_server_background_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton.Manual" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/serenity_btn_stroke_color_selector</item>
        <item name="rippleColor">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="backgroundTint">@color/serenity_manual_server_background_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Widget.AppTheme.CardView.Movie" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#4d4e4f</item>
    </style>

    <style name="ThemeOverlay.App.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="background">@drawable/gallery_item_background</item>
    </style>

</resources>
